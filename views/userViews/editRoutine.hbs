    <form action="/routines/{{theRoutine._id}}/update" method="post">
        <div class="routine-form">
            <h2>{{theRoutine.Userid.name}}'s Workout Routine</h2>
            
            <label>Workout</label>
            <input value="{{theRoutine.Workout}}" name="workout" type="text">
            <br>
            
            <label>Weight</label>
            <input value="{{theRoutine.Weight}}" name="weight" type="number">
            <br>

            <label>Sets</label>
            <input value="{{theRoutine.Sets}}" name="sets" type="number">
            <br>
           
            <label>Reps</label>
            <input value="{{theRoutine.Reps}}" name="reps" type="number">
            <br>
            
            <label>More Details</label>
            <textarea name="details" id="text" cols="30" rows="10">{{theRoutine.Details}}</textarea>
            <br>
            
            <button type="submit" class="add-btn">Add</button>
        </div>

    </form>




